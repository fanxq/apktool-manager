{
  "name": "apktool-manager",
  "version": "0.1.0",
  "description": "a management GUI for apktool",
  "author": "fanxq",
  "private": true,
  "main": "./src/main/main.js",
  "type": "module",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "start": "npm run build && electron .",
    "dev": "cross-env NODE_ENV=development electron ./",
    "pack": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "install": "cross-env ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ node ./node_modules/electron/install.js"
  },
  "build": {
    "appId": "com.apktool.manager",
    "productName": "Apktool Manager",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json",
      "src/assets/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Apktool Manager"
    },
    "win": {
      "icon": "./src/assets/icon.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/vue-fontawesome": "^0.1.9",
    "core-js": "^3.4.3",
    "dayjs": "^1.8.23",
    "imageinfo": "^1.0.4",
    "rimraf": "^3.0.0",
    "sequelize": "^5.21.5",
    "sqlite3": "^4.1.1",
    "uuid": "^7.0.2",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-router": "^4.1.0",
    "@vue/cli-plugin-vuex": "^4.1.0",
    "@vue/cli-service": "^4.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "cross-env": "^7.0.2",
    "electron": "9.1.0",
    "electron-builder": "^22.3.6",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  }
}
